{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "main-capability",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "path:default",

        "event:default",

        "window:default",

        "app:default",

        "resources:default",

        "menu:default",

        "tray:default",

        "window:allow-set-title",

        "dialog:default",
        "dialog:allow-open",

        "store:allow-get",
        "store:allow-set",
        "store:allow-save",
        "store:allow-load"
    ]
}
